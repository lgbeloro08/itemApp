<!-- delete-confirmation.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventory Management System | Delete Confirmation</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <div class="container mt-5">
        <h1>Confirm Deletion</h1>
        <h2>Are you sure you want to delete this item?</h2>
        <form action="/items/<%= item._id %>?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-sm btn-primary btn-danger text-white">Yes, delete it!</button>
            <a href="/items" class="btn btn-secondary">Cancel</a>
        </form>
        <div class="form-group mb-3">
            <label for="identifier">Item ID</label>
            <input type="text" class="form-control" id="identifier" disabled value="<%= item._id %>">
        </div>
        <div class="form-group mb-3">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" disabled value="<%= item.name %>">
        </div>
        <div class="form-group mb-3">
            <label for="category">Category</label>
            <input type="text" class="form-control" id="category" name="category" disabled value="<%= item.category %>">
        </div>
        <div class="form-group mb-3">
            <label for="quantity">Quantity</label>
            <input type="text" class="form-control" id="quantity" name="quantity" disabled value="<%= item.quantity %>">
        </div>
        <div class="form-group mb-3">
            <label for="price">Price</label>
            <input type="text" class="form-control" id="price" name="price" disabled value="<%= item.price %>">
        </div>
        <div class="form-group mb-3">
            <label for="description">Description</label>
            <input type="text" class="form-control" id="description" name="description" disabled
                value="<%= item.description %>">
        </div>
        <div class="form-group mb-3">
            <label for="createdAt">Created At</label>
            <input type="text" class="form-control" id="createdAt" name="createdAt" disabled value="<%= item.createdAt %>">
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
        integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
        crossorigin="anonymous"></script>
</body>
</html>